# Environment Configuration Template
# Copy this file to .env and fill in your API keys

# GroqAPI Configuration
GROQ_API_KEY=your_groq_api_key_here

# Tavily API Configuration (for external web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Optional: ChromaDB Configuration
CHROMA_DB_PATH=./data/vector_db
CHROMA_COLLECTION_NAME=legal_documents

# Optional: Model Configuration Overrides
# DEFAULT_ASSISTANT_MODEL=gemma2-9b-it
# DEFAULT_RESEARCHER_MODEL=meta-llama/llama-3-8b-instruct
# DEFAULT_LAWYER_MODEL=moonshot-v1-8k
# DEFAULT_EDITOR_MODEL=meta-llama/llama-3-8b-instruct
# DEFAULT_SUPERVISOR_MODEL=llama-3.1-8b-instant

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/legal_system.log

# System Configuration
MAX_ITERATIONS=3
ENABLE_STREAMING=true
ENABLE_CACHING=true

# Document Processing Configuration
PDF_EXTRACTION_METHOD=pymupdf
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_FORMATS=pdf,docx,txt

# Safety and Performance
MAX_TOKENS_PER_REQUEST=4000
REQUEST_TIMEOUT_SECONDS=60
MAX_CONCURRENT_REQUESTS=5
RATE_LIMIT_PER_MINUTE=30
